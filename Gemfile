source 'https://rubygems.org'

gem 'rails', '3.2.18'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

group :development, :test do 
  gem 'sqlite3'
  gem 'pry-rails'
end

group :production do 
  gem 'pg'
  gem 'rails_12factor'
end 

gem 'jquery-rails'
gem 'bootstrap-sass', '~> 2.3.2.2'
gem 'devise'
gem 'simple_form'
gem 'paperclip'